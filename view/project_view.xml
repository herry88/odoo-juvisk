        <record id="project_inherit_form" model="ir.ui.view">
            <field name="name">project.form.inherit.project</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
                <xpath expr="//page[2]" position="after">
                    <page string="Battery Rent">
                        <group>
                            <div class="oe_inline">
                                <field name="project_ids">
                                    <tree string="Project">
                                        <field name="name"/>
                                        <field name="equipment_id"/>
                                        <field name="actual_start_date"/>
                                        <field name="actual_done_date"/>
                                        <field name="state"/>
                                    </tree>
                                    <form string="Battery Rent" >
                                         <sheet>
                                             <group>
                                                 <group>
                                                      <field name="equipment_id" domain="[('use_in_project', '=', 0)]"/> <!-- jika status confirmed maka tidak tampil  -->
                                                 </group>
                                             </group>
                                                <notebook>
                                                    <page string="Schedule">
                                                        <form string="Battery Rent Line">
                                                            <group>
                                                                <group string="Plan Schedule">
                                                                    <field name="plan_start_date"/>
                                                                    <field name="plan_done_date"/>
                                                                </group>
                                                                <group string="Actual Schedule">
                                                                    <field name="actual_start_date"/>
                                                                    <field name="actual_done_date"/>

                                                                </group>
                                                            </group>
                                                        </form>
                                                    </page>
                                                    <page string="Other Information">
                                                        <field name="remark"/>
                                                    </page>
                                                </notebook>
                                         </sheet>
                                    </form>
                                </field>
                            </div>
                        </group>
                    </page>
                </xpath>
                <xpath expr="//form/sheet/notebook/page[1]/group/field[@name='partner_id']" position="after">
                    <field name="site_id_customer"/>
                    <field name="site_name_owner"/>
                    <field name="area_project"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
