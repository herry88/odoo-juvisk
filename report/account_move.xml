<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <report
            id="report_account_move"
            string="Voucher"
            model="account.move"
            report_type="qweb-pdf"
            file="juvisk.report_account_move"
            name="juvisk.report_account_move_view" />

        <template id="report_account_move_view">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="report.external_layout">
                        <div class="page">
                            <h2>Voucher <span t-field="doc.name"/></h2>
                            <div class="row mt32 mb32">
                                <div class="col-xs-3">
                                    <strong>Date:</strong>
                                    <p t-field="doc.date"/>
                                </div>
                                <div class="col-xs-3">
                                    <strong>Reference:</strong>
                                    <p t-field="doc.ref"/>
                                </div>
                                <div class="col-xs-3">
                                    <strong>Journal:</strong>
                                    <p t-field="doc.journal_id.name"/>
                                </div>
                                <div class="col-xs-3">
                                    <strong>Partner:</strong>
                                    <p t-field="doc.partner_id.name"/>
                                </div>
                                <div class="col-xs-6">
                                    <strong>Note:</strong>
                                    <p t-field="doc.narration"/>
                                </div>
                            </div>

                            <table class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th><strong>Account</strong></th>
                                        <th><strong>Description</strong></th>
                                        <th><strong>Debit</strong></th>
                                        <th><strong>Credit</strong></th>

                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-set="i" t-value="1" />

                                    <tr t-foreach="doc.line_ids" t-as="line">
                                        <td>
                                            <span t-field="line.account_id.name"/>
                                        </td>
                                        <td>
                                            <span t-field="line.name"/>
                                        </td>
                                        <td>
                                            <span t-field="line.debit"/>
                                        </td>
                                        <td>
                                            <span t-field="line.credit"/>
                                        </td>

                                    </tr>

                                </tbody>
                            </table>

                            <div class="row">
                                <div class="col-xs-6 pull-right">
                                    <table class="table table-condensed">
                                        <tr class="border-black">
                                            <td class="text-right">
                                                <t t-set="debit" t-value="sum(line.debit for line in doc.line_ids)"/>
                                                <span t-esc="debit" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                            </td>
                                            <td class="text-right">
                                                <t t-set="credit" t-value="sum(line.credit for line in doc.line_ids)"/>
                                                <span t-esc="credit" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>

                            <div class="row" style="margin-top:100px">

                                <div class="col-xs-3">
                                    <table class="table table-condensed">
                                        <tr>
                                             <td style="border:0">Created by :</td>
                                        </tr>
                                        <tr>
                                            <td style="text-align:center"></td>
                                        </tr>
                                        <tr class="border-black">
                                            <td ></td>
                                        </tr>
                                    </table>
                                </div>

                            </div>

                        </div>
                    </t>
                </t>
            </t>
        </template>

    </data>
</odoo>
